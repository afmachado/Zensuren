<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dip">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1+"
                android:id="@+id/button1"
                android:layout_column="0"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button2"
                android:layout_column="2"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-"
                android:id="@+id/button3"
                android:layout_column="4"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2+"
                android:id="@+id/button4"
                android:layout_column="6"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button5"
                android:layout_column="8"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-"
                android:id="@+id/button6"
                android:layout_column="9"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3+"
                android:id="@+id/button7"
                android:layout_column="0"
                android:width="@android:dimen/app_icon_size"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button8"
                android:layout_column="2"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-"
                android:id="@+id/button9"
                android:layout_column="4"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4+"
                android:id="@+id/button10"
                android:layout_column="6"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button11"
                android:layout_column="8"
                android:background="#efff80"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4-"
                android:id="@+id/button12"
                android:layout_column="9"
                android:background="#ffa71c"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5+"
                android:id="@+id/button13"
                android:layout_column="0"
                android:background="#ff1f13"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button14"
                android:layout_column="2"
                android:background="#ff1f13"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5-"
                android:id="@+id/button15"
                android:layout_column="4"
                android:background="#ff1f13"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button16"
                android:layout_column="6"
                android:background="#ff0041"
                android:height="@android:dimen/app_icon_size"
                android:layout_margin="1mm" />
        </TableRow>

    </TableLayout>

    </HorizontalScrollView>

</LinearLayout>